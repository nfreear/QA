{
    "name": "iet-ou/qa",
    "description": "Rulesets for PHPMD and other quality assurance resources. Originally for APPLAuD. Â©The Open University (IET).",
    "homepage": "http://iet.open.ac.uk",
    "keywords": [ "testing", "quality", "OpenUniversity", "IET-OU" ],
    "license": "proprietary",
    "time": "2016-05-16T19:29:44",
    "minimum-stability": "alpha",
    "type": "library",
    "authors": [
        { "name": "Nick Freear (@nfreear)", "role": "Developer" }
    ],
    "support": {
        "email": "iet-webmaster@open.ac.uk",
        "source": "https://github.com/nfreear/QA"
    },
    "require": {
        "php": ">=5.4.0",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "phpmd/phpmd": "^2.4.3",
        "phpunit/phpunit": "~4.0",
        "sclable/xml-lint": "^0.2.2",
        "squizlabs/php_codesniffer": "^2.5.1"
    },
    "require-dev": {
    },
    "suggest": {
        "fig-r/psr2r-sniffer": "PHP FIG rectified, PSR-2-R",
        "wp-coding-standards/wpcs": "WordPress coding conventions"
    },
    "autoload": {
        "psr-4": {
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IET_OU\\QA\\Test\\Extend\\": "tests/extend"
        }
    },
    "scripts": {
        "test": [
            "composer validate --no-interaction",
            "vendor/bin/xmllint -e vendor -vs .",
            "# vendor/bin/parallel-lint --exclude vendor .",
            "# vendor/bin/phpcs --standard=PSR2 --encoding=utf-8 --extensions=php php/* && echo OK",
            "# vendor/bin/phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
